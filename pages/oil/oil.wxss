/* pages/oil/oil.wxss */
.oilContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #ccc;
}
.oilBlock{
  flex: 1;
  width: 90%;
  background-color: #efefef;
  margin:50rpx;
  border-radius: 20rpx;
}
.oilCity{
  padding:5rpx;
  font-size: 60rpx;
  text-align: center;
}
.oilList view{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.oilList view text{font-size:40rpx;padding-bottom: 20rpx;}
image{ width:120rpx;height:120rpx;}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .oilContainer{
    background-color: rgb(22, 21, 21);
    color: rgb(128, 128, 128);
  }
  .oilBlock{
    background-color: #2E2D2D;
  }
  /* DarkMode 下的样式 end */
}