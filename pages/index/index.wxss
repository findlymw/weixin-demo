/**index.wxss**/
page{
  height: 100%;
}
.indexContainer{
  height: 100%;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.baseInfo{
  width: 100%;
}

.locationAddr{
  color: #ffffff;
  position: absolute;
  top:40px;
  left:30px;

}
.locationImage{
  position: absolute;
  top:40px;
  left:5px;
  width: 30px;
  height:25px;
}
.dark-bg{
  width: 100%;
  height: 250px;
  position: relative;
}
.weather{
  width: 100%;
  margin: 0rpx;
}
.weatherView{
  position: absolute;
  top:200px;
  left:0px;
  height: 200rpx;
  width: 70%;
  background-image: linear-gradient(to right, rgb(112,169,243),rgb(50,145,223));
  border-radius: 200px;
}
.infoContent{
  width: 100%;
  height: 100%;
  background-color: #efefef;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  page{
    height: 100%;
  }
  /* DarkMode 下的样式 end */
}