/* pages/news/news.wxss */
page{
  height: 100%;
}
.constellationContainer{
  height: 100%;
}



.weui-tabs{
  width: 100%;
  height: 100%;
}
.weui-tabs-swiper{height: 100%;}
.weui-tabs-bar__title{
  margin: 20rpx 10rpx 20rpx 10rpx;
}
.tab-content{
  height: 100%;
  width: 100%;
}
.tab-content image{
  width: 79rpx;
  height:79rpx;
}
.tab-content .constellationHead{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0 30rpx 0;
  padding: 30rpx;
  box-shadow: 1px 1px 6px #cacaca;
}


.constellationDetail{
  margin: 5rpx 0 50rpx 0;
  padding: 0 10rpx 0 10rpx;
  display: inline-block;
  background-color: #efefef;
}
.titleStyle{
  font-size: 40rpx;
  padding:10rpx;
}
.listStyle{
  padding: 20rpx;
}
.listStyle text{font-weight: bold;}
.yearView{
  margin: 10rpx 0 50rpx 10rpx;
  
}
.yearTitle{
  font-size: 35rpx;
  margin: 20rpx 0;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .tab-content .constellationHead{
    box-shadow: none;
  }
  .constellationDetail{
    background-color: #2E2D2D;
  }
  /* DarkMode 下的样式 end */
}